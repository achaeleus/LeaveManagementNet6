@model LeaveManagement.Web.Models.EmployeeAllocationVM

@{
    ViewData["Title"] = "View";
}

<h1>View Allocations for @Model.Firstname @Model.Lastname </h1>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Firstname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Firstname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lastname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lastname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateJoined)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateJoined)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
<hr />

<div class="card" >
    <div class="card-header">
        Leave Allocations
    </div>
    <ul class="list-group list-group-flush">
        <li>
            <div class="row">
                <div class="col">Leave Name</div>
                <div class="col">Original Allocations</div>
                <div class="col">Current Days</div>
                <div class="col">Action</div>
            </div>
        </li>
        @foreach(var allocation in Model.LeaveAllocations)
        {
            <li class="list-group-item">
                <div class="row">
                    <div class="col">@allocation.LeaveType.Name </div>
                    <div class="col">
                        <button type="button" class="btn btn-primary">
                            <span class="badge text-bg-secondary">@allocation.LeaveType.DefaultDays</span>
                        </button>
                    </div>
                    <div class="col">
                        <button type="button" class="btn btn-primary">
                            <span class="badge text-bg-secondary"> @allocation.NumberOfDays</span>
                        </button>
                    </div>
                    <div class="col"><a asp-action="EditAllocations" class="btn btn-warning" asp-route-id="@allocation.Id"><i class="fas fa-pencil-alt"></i></a></div>
                </div>
                
            </li>
        }
    </ul>
</div>
<br />
<div>
    <a asp-action="Index" class="btn btn-dark">Back to List</a>
</div>
